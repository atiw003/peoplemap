:javascript
  $(document).ready(function() {
  	Nifty('div#form_wrapper','medium');
  	Nifty('div.form_explanation','medium');
  	Nifty('div.form_group','medium');
  });
%h1
  %img{:src=>@current_node_icon, :alt=>"Organisation icon", :width=>"56",:height=>"46"}
  <b>organisation</b>finder
%div{:id=>"form_wrapper"}
  %div{:class=>"form_explanation"}
    = link_to image_tag("/images/icons/new_S_f2.png",:alt=>"New Organisation",:class=>"notice_icon",:height=>"41",:width=>"46"), new_organisation_path
    = link_to 'Click here to add a new organisation record to the database', new_organisation_path
%div{:id=>"index_list_wrapper"}
  %table{ :cellpadding => "0", :cellspacing => "0", :border => "0", :class => "node_list"}
    %tr
      %th
        Name
      %th
        Sector
      %th
        Industry
      %th{:colspan=>"3"}
    - @organisations.each do |organisation|
      %tr{:class => cycle('list_odd', 'list_even')}
        %td
          = organisation.name
        %td
          = organisation.sector
        %td
          = organisation.industry
        %td
          = link_to image_tag("/images/icons/show_XS_f2.png",:alt=>"Show",:class=>"notice_icon",:height=>"25",:width=>"29"), :action => "show", :id => organisation
        %td
          = link_to image_tag("/images/icons/edit_XS_f2.png",:alt=>"Edit",:class=>"notice_icon",:height=>"25",:width=>"31"), edit_organisation_path(organisation)
        %td
          = link_to image_tag("/images/icons/delete_XS_f2.png",:alt=>"Delete",:class=>"notice_icon",:height=>"25",:width=>"27"), organisation, :confirm => 'Are you sure?', :method => :delete
%br
